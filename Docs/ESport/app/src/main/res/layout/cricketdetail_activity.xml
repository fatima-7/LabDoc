
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sport"
    android:orientation="vertical"
    tools:context=".CricketDetailActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/match_in_progress"
            android:textAlignment="center"
            android:textColor="#FFC107" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            tools:context=".CricketDetailActivity">

            <TableRow
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:background="#f1f1f1f1">


                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="TEAMS"
                    android:textColor="#131311"
                    android:textSize="10dp" />


                <TextView

                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="VENUE"
                    android:textColor="#131311"
                    android:textSize="10dp" />

                <TextView

                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="SCORE"
                    android:textColor="#131311"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"

                    android:text="TOSS"
                    android:textColor="#131311"
                    android:textSize="10dp" />

            </TableRow>

            <TableRow
                android:id="@+id/currentMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="AUS vs IND"
                    android:textColor="#01FFD8"

                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Sydney Ground"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"

                    android:text="AUS 59/1"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="AUS"

                    android:textColor="#F3F1ED"
                    android:textSize="10dp" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Upcoming Matches"
            android:textAlignment="center"
            android:textColor="#FFC107" />

        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            tools:context=".CricketDetailActivity">

            <TableRow
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:background="#f1f1f1f1">

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="TEAMS"
                    android:textColor="#131311"
                    android:textSize="10dp" />


                <TextView
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="VENUE"
                    android:textColor="#131311"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Time/Date"
                    android:textColor="#131311"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="FORMAT"
                    android:textColor="#131311"
                    android:textSize="10dp" />
            </TableRow>

            <TableRow
                android:id="@+id/upcommingMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="PAK vs NZ"
                    android:textColor="#01FFD8"

                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Auckland"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"

                    android:text="17 Dec 2020\n 03:00 PM"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="T20"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />
            </TableRow>

        </TableLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

